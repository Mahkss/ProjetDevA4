<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
    </startup>
  
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="receptionPortBinding" />
            </basicHttpBinding>
        </bindings>


      <behaviors>
        <serviceBehaviors>
          <behavior name="MessagingServiceBehavior">
            <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
          </behavior>
        </serviceBehaviors>
      </behaviors>

      <services>
        <service name="NETPlatform.MessagingComponent" behaviorConfiguration="MessagingServiceBehavior">
          <endpoint address="mex" binding="wsHttpBinding" contract="IMetadataExchange" />
          <host>
            <baseAddresses>
              <add baseAddress="http://localhost:8010/Service/"/>
            </baseAddresses>
          </host>
        </service>
      </services>
        
        <client>
            <endpoint address="http://localhost:10080/receptionService/ReceptionServiceBean"
                binding="basicHttpBinding" bindingConfiguration="receptionPortBinding"
                contract="ReferenceReceptionJEE.ReceptionEndPoint" name="receptionPort" />
        </client>
    </system.serviceModel>
</configuration>
